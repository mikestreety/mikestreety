<li>
	<article class="article">
		<h3>
			<a href="{{ entry.url }}">{{ entry.data.title if entry.data.title else entry.url }}</a>
		</h3>
		<p class="date">
			{% if date %}
				<time class="dt-published is-hidden">{{ date | isoDate }}</time>
				{% if page.date > now %}
					Scheduled for <strong>{{ date | readableDate }}</strong>.
				{% else %}
					Posted on <strong>{{ date | readableDate }}</strong>.
				{% endif %}
			{% endif %}
			{% if entry.data.publication %}Written For <strong>{{ entry.data.publication }}</strong>{% endif %}
			{% if entry.url.includes('/drafts/') or entry.data.draft %}<span class="info">Draft</span>{% endif %}
		</p>

		<p class="abstract">
			{{ entry.data.intro }}
		</p>

		<div class="meta categories">
			{% for tag in entry.data.tags %}
				{% include 'tag.njk' %}
			{% endfor %}
		</div>

	</article>
</li>
