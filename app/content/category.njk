---
layout: default.njk
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /category/{{ tag | slugify }}/
eleventyComputed:
  title: "{{ tag }}"
  description: "Posts tagged to the category {{ tag }} by Mike Street, Brighton based front-end developer"
---

<div class="container blog-container">
	<h1>{{ tag }}</h1>
	<p class="subtitle">Showing posts from the category <strong>"{{ tag }}"</strong> </p>

	<div class="post-listing">
		<ul class="post-listing-full">
		{% set categoryList = collections[ tag ] %}
		{% for entry in categoryList | reverse %}
			{% include 'entry.njk' %}
		{% endfor %}
		</ul>
	</div>
</div>
