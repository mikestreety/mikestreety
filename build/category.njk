---
pagination:
  data: collections
  size: 1
  alias: category
permalink: /category/{{ category }}/
---
{% set categorylist = collections[category] %}

<div class="container blog-container">
	<h1>{{ category }}</h1>
	<p class="subtitle">Showing posts from the category <strong>"{{ category }}"</strong></p>

	<div class="post-listing">
		<ul class="post-listing-full">
		{%- for entry in categorylist -%}
			{% include 'entry.njk' %}
		{% endfor %}
		</ul>
	</div>

</div>
